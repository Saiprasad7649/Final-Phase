@using Equinox.Models
@model Equinox.Models.DomainModels.User

@{
    string title = ((string)ViewBag.Action ?? "Add") + " User";
    ViewData["Title"] = title;
}

<h2>@title</h2>


@if (TempData["ModelError"] != null)
{
    <div class="alert alert-warning">Please fix the error.</div>
}

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    @Html.AntiForgeryToken()




    <div class="row mb-2">
        <label asp-for="Name" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="PhoneNumber" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="PhoneNumber" class="form-control phone-mask" placeholder="xxx-xxx-xxxx" maxlength="12" />
        </div>
        <div class="col">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-2">
        <label asp-for="Email" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="DOB" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="DOB" class="form-control date-picker" />
        </div>
        <div class="col">
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsCoach" class="form-check-input" />
        <label asp-for="IsCoach" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/age-range.js"></script>
    <script>
        $(document).ready(function() {
            // Phone number formatting
            $('.phone-mask').on('input', function() {
                var input = $(this).val().replace(/\D/g, ''); // Remove non-digits
                if (input.length > 0) {
                    if (input.length <= 3) {
                        $(this).val(input);
                    } else if (input.length <= 6) {
                        $(this).val(input.substring(0, 3) + '-' + input.substring(3));
                    } else {
                        $(this).val(input.substring(0, 3) + '-' + input.substring(3, 6) + '-' + input.substring(6, 10));
                    }
                }
            });

            // Date picker setup
            var eightyYearsAgo = new Date();
            eightyYearsAgo.setFullYear(eightyYearsAgo.getFullYear() - 80);
            
            var eightYearsAgo = new Date();
            eightYearsAgo.setFullYear(eightYearsAgo.getFullYear() - 8);
            
            $('.date-picker').attr('type', 'date');
            $('.date-picker').attr('max', eightYearsAgo.toISOString().split('T')[0]);
            $('.date-picker').attr('min', eightyYearsAgo.toISOString().split('T')[0]);
            $('.date-picker').val(eightyYearsAgo.toISOString().split('T')[0]);
        });
    </script>
}

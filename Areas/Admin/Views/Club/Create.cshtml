@model Equinox.Models.DomainModels.Club
@{
    var isEdit = Model != null && Model.ClubId != 0;
    ViewData["Title"] = isEdit ? "Edit Club" : "Add Club";
}

<h2>@ViewData["Title"]</h2>

@if(TempData["ModelError"] != null)
{
    <div class="text-danger">@TempData["ModelError"]</div>
}

<form asp-action="@(isEdit ? "Edit" : "Create")" method="post">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control phone-mask" placeholder="xxx-xxx-xxxx" maxlength="12" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function() {
            // Phone number formatting
            $('.phone-mask').on('input', function() {
                var input = $(this).val().replace(/\D/g, ''); // Remove non-digits
                if (input.length > 0) {
                    if (input.length <= 3) {
                        $(this).val(input);
                    } else if (input.length <= 6) {
                        $(this).val(input.substring(0, 3) + '-' + input.substring(3));
                    } else {
                        $(this).val(input.substring(0, 3) + '-' + input.substring(3, 6) + '-' + input.substring(6, 10));
                    }
                }
            });
        });
    </script>
}

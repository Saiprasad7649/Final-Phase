@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@model IEnumerable<Equinox.Models.DomainModels.Club>
@{
    ViewData["Title"] = "Clubs";
}

<h2>Clubs</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Club</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var club in Model)
        {
            <tr>
                <td>@club.Name</td>
                <td>@club.PhoneNumber</td>
                <td>
                    <a asp-controller="Class" asp-action="List" asp-route-clubId="@club.ClubId" class="btn btn-sm btn-info">Classes</a>
                    <a asp-action="Edit" asp-route-id="@club.ClubId" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@club.ClubId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
